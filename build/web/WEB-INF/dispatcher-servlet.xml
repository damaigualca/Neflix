<?xml version='1.0' encoding='UTF-8' ?>
<!-- was: <?xml version="1.0" encoding="UTF-8"?> -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
        http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.0.xsd">
    

    <bean class="org.springframework.web.servlet.mvc.support.ControllerClassNameHandlerMapping"/>
    

    <!--
    Most controllers will use the ControllerClassNameHandlerMapping above, but
    for the index controller we are using ParameterizableViewController, so we must
    define an explicit mapping for it.
    -->
    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                 <prop key="index.htm">indexController</prop>
                 <prop key="/admin/indexAdmin.htm">indexAdminController</prop>
                 <prop key="/admin/estadisticas.htm">estadisticasController</prop>
                 <prop key="catalog-page.htm">catalogo</prop>
                 <prop key="/admin/actor/listaActor.htm">actorController</prop>
                 <prop key="/admin/actor/agregarActor.htm">actorController</prop>
                 <prop key="/admin/actor/editarActor.htm">actorController</prop>
                 <prop key="/admin/actor/eliminarActor.htm">actorController</prop>
                 <prop key="/admin/pelicula/listaPelicula.htm">peliController</prop>
                 <prop key="/admin/pelicula/agregarPelicula.htm">peliController</prop>
                 <prop key="/admin/pelicula/editarPelicula.htm">peliController</prop>
                 <prop key="/admin/pelicula/eliminarPelicula.htm">peliController</prop>
                 <prop key="/admin/formato/listaFormato.htm">formatoController</prop>
                 <prop key="/admin/formato/agregarFormato.htm">formatoController</prop>
                 <prop key="/admin/formato/editarFormato.htm">formatoController</prop>
                 <prop key="/admin/formato/eliminarFormato.htm">formatoController</prop>
                 <prop key="/admin/socio/listaSocio.htm">listaSocio</prop>
                 <prop key="/admin/socio/agregarSocio.htm">listaSocio</prop>
                 <prop key="/admin/socio/editarSocio.htm">listaSocio</prop>
                 <prop key="/admin/socio/eliminarSocio.htm">listaSocio</prop>
                 <prop key="product-page.htm">product-page</prop>
                 <prop key="login.htm">login</prop>
                 <prop key="registration.htm">registration</prop>
                
                
            </props>
        </property>
    </bean>

    <bean id="viewResolver"
          class="org.springframework.web.servlet.view.InternalResourceViewResolver"
          p:prefix="/WEB-INF/jsp/"
          p:suffix=".jsp" />

    <!--
    The index controller.
    -->
    <bean name="actorController"
          class="Controller.ActorController"
          />
    <bean name="formatoController"
          class="Controller.FormatoController"
          />
    <bean name="peliController"
          class="Controller.PeliculaController"
          />
    <bean name="listaSocio"
          class="Controller.SocioController"
          />
    <bean name="indexController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="index" />
    <bean name="catalogo"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="catalog-page" />
    <bean name="product-page"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="product-page" />
    <bean name="login"
          class="Controller.LoginController"
           />
    <bean name="registration"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="registration" />
    <bean name="indexAdminController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="admin/indexAdmin" />
    <bean name="estadisticasController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="admin/estadisticas" />


</beans>
